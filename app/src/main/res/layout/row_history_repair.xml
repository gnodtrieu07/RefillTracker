<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="#1A00BCD4"
    android:id="@+id/layoutNearRepair"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/img_typeR"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Sửa chữa"
        android:textSize="18sp"
        android:id="@+id/tv_history_titleR"
        android:textColor="#00BCD4"
        android:layout_marginLeft="5dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/bg_secondary"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Giờ"
                android:textSize="14sp"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/tv_history_timeR"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Ngày"
                android:textSize="14sp"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/tv_history_dateR"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_secondary"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Loại sửa chữa"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/tv_history_type"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/bg_secondary"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Tiền"
        android:textSize="16sp"
        android:id="@+id/tv_history_priceR"
        android:textColor="#00BCD4"/>

</LinearLayout>